{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ng-signature-pad": {
      "projectType": "library",
      "root": "projects/signature-pad",
      "sourceRoot": "projects/signature-pad/src",
      "prefix": "ng",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/signature-pad/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/signature-pad/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/signature-pad/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/signature-pad/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/signature-pad/**/*.ts", "projects/signature-pad/**/*.html"],
            "eslintConfig": "projects/signature-pad/eslint.config.js"
          }
        }
      }
    },
    "signature-pad-web": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/signature-pad-web",
      "sourceRoot": "projects/signature-pad-web/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "docs",
            "index": "projects/signature-pad-web/src/index.html",
            "browser": "projects/signature-pad-web/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/signature-pad-web/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/signature-pad-web/public"
              }
            ],
            "styles": ["projects/signature-pad-web/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "signature-pad-web:build:production"
            },
            "development": {
              "buildTarget": "signature-pad-web:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "projects/signature-pad-web/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/signature-pad-web/public"
              }
            ],
            "styles": ["projects/signature-pad-web/src/styles.scss"],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/signature-pad-web/**/*.ts", "projects/signature-pad-web/**/*.html"],
            "eslintConfig": "projects/signature-pad-web/eslint.config.js"
          }
        }
      }
    }
  }
}
